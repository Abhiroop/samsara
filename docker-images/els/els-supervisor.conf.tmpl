[program:els]
process_name=els
command=/opt/els/bin/elasticsearch --default.config=/opt/els/config/elasticsearch.yml --default.path.home=/opt/els --default.path.logs=/logs --default.path.data=/data/els/data --default.path.work=/data/els/work --default.path.conf=/opt/els/config
environment = ES_HEAP_SIZE="%%ELS_HEAP_SIZE%%"
stdout_logfile = /logs/els-server.out
stderr_logfile = /logs/els-server.out
redirect_stderr=true
user = root
startsecs = 10
startretries = 5
autorestart=true
stopasgroup=true
