{:kafka-source
 {:zookeeper-connect  "%%KAFKA_ZOOKEEPER_CONNECT%%"
  :connect-retry      5000
  :group-id           "qanal"
  :auto-offset-reset  :earliest         ; Can only be earliest or latest
  :fetch-size         10485760          ; size in bytes (10mb)
  }

 ;; TODO partition_id should probably be a partition_spec or partitions
 :topics { "%%KAFKA_TOPIC%%" %%KAFKA_PARTITION_ID%% }

 :elasticsearch-target
 {:end-point          "http://%%ELS_PORT_9200_TCP_ADDR%%:%%ELS_PORT_9200_TCP_PORT%%"}

 :tracking {:enabled %%TRACKING_ENABLED%% :type :riemann
            :host "%%RIEMANN_PORT_5555_TCP_ADDR%%"
            :port %%RIEMANN_PORT_5555_TCP_PORT%%
            :prefix "samsara.indexing.%%HOSTNAME%%" }

 :logging-options
 {:min-level          :info
  :path               "/logs/qanal.log"
  :max-size           10485760                     ; size in bytes (10mb)
  :backlog            10}}
